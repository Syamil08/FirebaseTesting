<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Rule">

    <EditText
        android:id="@+id/kelamin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Jenis Kelamin"
        android:textSize="16sp"
        android:layout_marginRight="20dp"
        android:layout_margin="20dp"
        android:inputType="text"/>

    <EditText
        android:id="@+id/berat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Berat Badan"
        android:textSize="16sp"
        android:layout_below="@id/kelamin"
        android:layout_marginRight="20dp"
        android:layout_margin="20dp"
        android:inputType="number"/>

    <EditText
        android:id="@+id/umurBawah"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Batas Umur Bawah"
        android:textSize="16sp"
        android:layout_below="@id/berat"
        android:layout_marginRight="20dp"
        android:layout_margin="20dp"
        android:inputType="number"/>

    <EditText
        android:id="@+id/umurAtas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Batas Umur Atas"
        android:textSize="16sp"
        android:layout_below="@id/umurBawah"
        android:layout_marginRight="20dp"
        android:layout_margin="20dp"
        android:inputType="number"/>

    <EditText
        android:id="@+id/energi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Energi"
        android:textSize="16sp"
        android:layout_below="@id/umurAtas"
        android:layout_marginRight="20dp"
        android:layout_margin="20dp"
        android:inputType="number"/>
    
    <Button
        android:id="@+id/tambahRule"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tambah Rule"
        android:layout_below="@id/energi"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:onClick="tambahRule"/>

</RelativeLayout>